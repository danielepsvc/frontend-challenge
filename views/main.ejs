    <!--link rel="stylesheet" href="./src/scss/mainstyle.css"-->
    <link rel="stylesheet" href="./src/scss/main.css">

</head>

<body>



    <div id="owl-demo-2" class="owl-carousel owl-theme">
        <article class="thumbnail item">
            <div class="box">
                <a href="<%= app1URL; %>">
                    <i class="<%= app1Icon; %>"></i>
                    <p>
                        <%= app1Title; %>
                    </p>
                </a>
            </div>
        </article>

        <article class="thumbnail item">
            <div class="box">
                <a href="<%= app2URL; %>">
                    <i class="<%= app2Icon; %>"></i>
                    <p>
                        <%= app2Title; %>
                    </p>
                </a>
            </div>
        </article>

        <article class="thumbnail item">
            <div class="box">
                <a href="<%= app3URL; %>">
                    <i class="<%= app3Icon; %>"></i>
                    <p>
                        <%= app3Title; %>
                    </p>
                </a>
            </div>
        </article>

        <article class="thumbnail item">
            <div class="box">
                <a href="<%= app4URL; %>">
                    <i class="<%= app4Icon; %>"></i>
                    <p>
                        <%= app4Title; %>
                    </p>
                </a>
            </div>
        </article>

        <article class="thumbnail item">
            <div class="box">
                <a href="<%= app5URL; %>">
                    <i class="<%= app5Icon; %>"></i>
                    <p>
                        <%= app5Title; %>
                    </p>
                </a>
            </div>
        </article>

        <article class="thumbnail item">
            <div class="box">
                <a href="<%= app6URL; %>">
                    <i class="<%= app6Icon; %>"></i>
                    <p>
                        <%= app6Title; %>
                    </p>
                </a>
            </div>
        </article>

    </div>


    <!-- The video -->
    <video autoplay muted loop>
        <source src="../src/videos/waves.mp4" type="video/mp4">
    </video>

    <div class="row m-4">
        <div class="col mt-4">
            <h1>Room <%= room %></h1>
        </div>
        <div class="col text-end">
            <h1><%= today %> | <%= hour %></h1>
            <h2>
                <span class="weatherIcon">
                    <i class="<%= weatherIcon %>"></i>
                </span>
                <%= weatherTemp %>
            </h2>



            <div class="mini-container">

                <article class="card">
                    <div>
                        <img src="<%= news1Icon %>">
                    </div>
                    <div>
                        <h4><%= news1Title %></h4>
                        <h6><%= news1Line1 %></h6>
                        <h6><%= news1Line2 %></h6>
                        <p class="footnote"><%= news1note %></p>
                    </div>
                </article>

                <article class="card">
                    <div>
                        <img src="<%= news2Icon %>">
                    </div>
                    <div>
                        <h4><%= news2Title %></h4>
                        <h6><%= news2Line1 %></h6>
                        <h6><%= news2Line2 %></h6>
                        <p class="footnote"><%= news2note %></p>
                    </div>
                </article>



            </div>





        </div>
    </div>










    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.6/owl.carousel.min.js"></script>

    <script src="js/newsbox/jquery.bootstrap.newsbox.min.js" type="text/javascript"></script>
    <script src="./src/js/main.js"></script>


</body>

</html>